<div class="navbar">
  <a href="/">
    <img src="/images/logo.png" alt="Tweetable"></img>
  </a>
  <nav>
    <ul class="nav-list">
      <li class="link"><%= link_to "Home", tweets_path %></li>
      <% if user_signed_in? %>
        <li class="link"><%= link_to "Profile", profile_path %></li>
        <li class="link"><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %></li>
        <% if current_user.avatar.attached? %>
          <li><%= link_to image_tag(current_user.avatar, size: "45x45", style: "border-radius: 50px"), profile_path %></li>
        <% else %>
          <li><%= link_to image_tag("default_image.png", size: "45x45", style: "border-radius: 50px"), profile_path %></li>
        <% end %>  
      <% else %>
        <li class="link"><%=  link_to "Sign In", new_user_session_path %></li>
        <li class="link"><%=  link_to "Sign Up", new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>
</div>